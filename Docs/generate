#!/bin/sh
SCRIPT_DIR="$( cd "$( dirname "$0" )" && pwd )"

DOCSETUTIL_PATH="$(xcode-select -print-path)/usr/bin/docsetutil"

rm -rf ${SCRIPT_DIR}/html
rm -rf ${SCRIPT_DIR}/docset
rm -rf ${SCRIPT_DIR}/publish

appledoc \
  \
  --publish-docset \
  --keep-intermediate-files \
  --no-install-docset \
  --keep-undocumented-objects \
  --keep-undocumented-members \
  --no-repeat-first-par \
  \
  --project-name    BBRepository \
  --project-company BiasedBit \
  --company-id      com.biasedbit \
  --ignore          .m \
  --output          ${SCRIPT_DIR} \
  --docsetutil-path ${DOCSETUTIL_PATH}\
  \
  ${SCRIPT_DIR}/../Classes
